<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_deck"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.warhammer40kcards.NewDeck"
    tools:showIn="@layout/activity_new_deck">


    <TextView
        android:text="@string/enter_the_number_of_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numCards"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:textSize="20sp"
        android:textColor="@color/blackText"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/numCards"
        android:layout_alignBottom="@id/numCards"
        android:layout_marginLeft="15sp"
        android:layout_marginStart="15sp"
        android:layout_toRightOf="@id/numCards"
        android:layout_toEndOf="@id/numCards"
        android:id="@+id/numCardsOutput"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/backgroundButton"
        android:inputType="number"
        android:ems="10"
        android:hint="@string/_36_std" />

</RelativeLayout>
