<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.warhammer40kcards">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pwtab"
            android:label="@string/title_activity_pwtab"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".md"
            android:label="@string/title_activity_md"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mcd"
            android:label="@string/title_activity_mcd"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".pd"
            android:label="@string/title_activity_pd"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewDeck"
            android:label="@string/title_activity_new_deck"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ModDeck"
            android:label="@string/title_activity_mod_deck"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DeleteDeck"
            android:label="@string/title_activity_delete_deck"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>